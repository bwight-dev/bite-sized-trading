{
    "name": "bite-sized-trading",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
      "mobile",
      "backend",
      "shared"
    ],
    "scripts": {
      "start:mobile": "cd mobile && npm start",
      "start:backend": "cd backend && npm run dev",
      "dev": "concurrently \"npm run start:backend\" \"npm run start:mobile\"",
      "install:all": "npm install && npm run install:mobile && npm run install:backend",
      "install:mobile": "cd mobile && npm install",
      "install:backend": "cd backend && npm install"
    },
    "devDependencies": {
      "concurrently": "^8.2.2"
    }
  }